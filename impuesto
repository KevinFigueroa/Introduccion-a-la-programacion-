#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

int main()
{
float sueldo,sueldobase,impuesto;
cout<<"Ingrese el sueldo:";
cin>>sueldo;
cout<<"Ingrese el sueldo base";
cin>>sueldobase;
if(sueldo>sueldobase*2)
impuesto=sueldo*0.13;
else impuesto=0;
cout<<"El impuesto a pagar es:";
cout<<impuesto;
getch();
return 0;
